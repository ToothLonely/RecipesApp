<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle4" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="StyleTitle5" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/purpleColor</item>
    </style>

    <style name="StyleTitle6" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/purpleColor</item>
    </style>

    <style name="StyleTitle7" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/greyColor</item>
    </style>

    <style name="StyleIngredient" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/halfMainDimen</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/greyColor</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleMethod" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/halfMainDimen</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/greyColor</item>
    </style>

    <style name="StyleCategoryName" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/StyleTitle6</item>
    </style>

    <style name="StyleCategoryDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/StyleTitle7</item>
    </style>

    <style name="StyleCategoriesTitle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/shape_rounded_categories</item>
        <item name="android:textAppearance">@style/StyleTitle5</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle4</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>