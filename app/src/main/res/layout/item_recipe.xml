<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvRecipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mainDimen"
    app:cardCornerRadius="@dimen/halfMainDimen">

    <LinearLayout
        android:id="@+id/layoutRecipeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBcgRecipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemRecipeImageSize"
            android:contentDescription="@string/cd_recipe_image"
            android:scaleType="centerCrop"
            tools:background="@drawable/bcg_item_recipe" />

        <TextView
            android:id="@+id/tvRecipeName"
            style="@style/StyleCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/halfMainDimen"
            tools:text="test_burger_recipe_name" />
    </LinearLayout>
</androidx.cardview.widget.CardView>